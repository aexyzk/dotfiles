#
# wm independent hotkeys
#

super + return
	alacritty

# brightness keys
XF86MonBrightnessUp
	changebrightness up

XF86MonBrightnessDown
	changebrightness down

# media keys
XF86AudioPrev
	playerctl previous

XF86AudioNext
	playerctl next

XF86AudioPlay
	playerctl play-pause

# volume keys
XF86AudioRaiseVolume
	changevolume up

XF86AudioLowerVolume
	changevolume down

XF86AudioMute
	changevolume mute

# program launcher
super + @space
	rofi -show drun

# Reload sxhkd
super + shift + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }q
	bspc node -{c,k}

#
#
# state/flags
#

super + shift + f
	bspc node focused.tiled -t fullscreen

super + t
	bspc node focused.fullscreen -t tiled

super + f
	bspc node focused.tiled -t floating

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous desktop in the current monitor
alt + {Left,Right}
	bspc desktop -f {prev,next}.local

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# move/resize
#

# notifications
ctrl + space
  dunstctl close

ctrl + shift + space
  dunstctl close-all

ctrl + shift + period
  dunstctl contextp

ctrl + alt + x
	xkill

super + Return
	alacritty

super + b
	flatpak run io.gitlab.librewolf-community

super + {k, c, d, s}
	{flatpak run org.kde.krita, codium, discord, flatpak run com.spotify.Client}
